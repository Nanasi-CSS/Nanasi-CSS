{
    "name": "nanasi-css",
    "version": "1.0.1",
    "description": "Nanasi.CSS is a responsive and pure CSS framework based on Flexbox. Made with ❤️ in Tanzania.",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\"",
        "lint": "prettier --write --only-changed \"src/*.css\"",
        "build": "yarn run build-clean && yarn run build-css",
        "build-css": "postcss --use autoprefixer -o ./src/nanasi.css ./dist/nanasi.css",
        "build-clean": "rimraf dist"
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "postcss-cli": "^6.1.3",
        "prettier": "1.18.2",
        "rimraf": "^2.7.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nanasi-CSS/Nanasi-CSS.git"
    },
    "main": "src/nanasi.css",
    "unpkg": "dist/nanasi.css",
    "style": "dist/nanasi.min.css",
    "keywords": [
        "css",
        "sass",
        "flexbox",
        "responsive",
        "framework"
    ],
    "author": "Geofrey Xvr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Nanasi-CSS/Nanasi-CSS/issues"
    },
    "files": [
        "LICENSE",
        "README.md"
    ]
}
